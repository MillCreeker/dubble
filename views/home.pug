extends layout
block content
    .container
        .row
        div.text-center
        pre.mt-5(id="messages" style="height:400px; overflow: scroll")
        input(type="text" id="messageBox" placeholder="Type your message here" style="display: block; width:100%; margin-bottom: 10px; padding:10px;")
        button(id="send" title="Send Message!" style="width: 100%; height: 30px;") Send Message
            form(class="form-signin" method="POST" action="/logout")
                #error
                    if error
                        p.text-danger Error!!!
                - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
                button.mt-5(class=buttonClass type="submit") Log Out