extends layout
block content
    .container
        .row
        div.text-center
        pre.mt-5(id="message" )
        input(type="text" id="messageBox" placeholder="Type your message here")
        button(class="btn" id="send" title="Send Message!" ) Send Message
            form(class="form-signin" method="POST" action="/logout")
                #error
                    if error
                        p.text-danger Error!!!
                - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
                button.mt-5(class=buttonClass type="submit") Log Out