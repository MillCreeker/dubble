extends layout
block content
    .container
        .row
        div.text-center
            form(class="form-signin" method="POST" action="/register")
                #error
                    if error
                        p.text-danger Error!!!

                - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
                h1.pt-5.mt-5(class=h1Classes) Please register

                //-input email
                label( for="inputUsername" class="sr-only") Username
                input.mt-5(type="text" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus)

                //-input password
                label(for="inputPassword" class="sr-only") Password
                input.mt-3(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required)

                //-signIn button
                - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
                button.mt-5(class=buttonClass type="submit") Register